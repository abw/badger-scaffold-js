{
  "env": {
    "browser": true,
      "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
  ],
  "ignorePatterns": [
    "scaffold/lib/**/*.{js,json}",
    "scaffold/src/*/src/**/*.{js,json}",
    "scaffold/src/*/lib/**/*.{js,json}"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "offsetTernaryExpressions": true,
        "SwitchCase": 1
      }

    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
